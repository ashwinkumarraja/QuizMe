<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Mathematica4">
    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ScOrE"
        android:layout_width="128dp"
        android:layout_height="36dp"
        android:layout_marginLeft="140dp"
        android:text="Score"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scorem3"
        android:layout_width="81dp"
        android:layout_height="42dp"
        android:layout_marginLeft="160dp"
        android:text="0"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="What is 0!?"
        android:textSize="24sp" />

    <Button
        android:id="@+id/optm31"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_selector2"
        android:text="1"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/optm32"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_selector"
        android:text="10"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/optm33"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_selector"
        android:text="Infinite"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/optm34"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_selector"
        android:text="0"
        android:textAllCaps="false" />
</LinearLayout>



